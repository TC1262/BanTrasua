@using WebsiteBanTraSua.Models;
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="container-fluid">
    @* Tiêu đề ----------------------------------------------------------------------------------------- *@
    <div class="row">
        <div class="col-md-12 text-center mb-2">
            <h4 class="p-2" style="background-color: #F8F8FF; color:blue">Các sản phẩm</h4>
        </div>
    </div>

    @* Danh sách sản phẩm ----------------------------------------------------------------------------- *@
    <div class="row">
        @* Left Sidebar -------------------------------------------------------------- *@
        <div class="col-md-3">
            @* DS chủ đề *@
            <p class="p-1 font-weight-bold" style="background-color:azure">Loại sản phẩm</p>
            @Html.Action("HTLoai", "Admin")
        </div>

        @* Sản phẩm ------------------------------------------------------------------ *@
        <div class="col-md-9">
            <div class="row">
                <div class="product-group">
                    <div class="row text-center">
                        @foreach (var s in Model)
                        {
                            <div class="col-md-3 text-center">
                                @* Ảnh bìa *@
                                <img class="card-img-top mt-2 w-50" src="~/Content/img/@s.hinhAnh" />
                                <div class="card-body">
                                    @* Tên sách *@
                                    <h6 style="font-size:15px;" class="card-title">@s.tenSP</h6>
                                    Giá: <text style="font-weight: bold" class="text-danger">@s.gia</text><br />
                                    @* Liên kết chọn và chi tiết *@
                                    <div class="row justify-content-md-center">
                                        <a href="/Admin/ChiTietSP/@s.maSP" class="btn btn-info mr-1">Chi tiết</a>
                                        <a href="/Admin/ChonMua/@s.maSP" class="btn btn-info">Chọn</a>

                                        @* Xài html action link phải bắt buộc là kiểu int *@
                                        @*@Html.ActionLink("Chi tiết", "ChiTietSP", "Admin", 
                                            new { id = @s.maSP }, new { @class = "btn btn-info mr-1" })
                                        @Html.ActionLink("Chọn", "Details", "Admin", new { id = @s.maSP },
                                            new { @class = "btn btn-info" })*@
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>